{
  "name": "Timer Helpers",
  "version": "0.1.0",
  "description": "Various helpers for working with the COGS timer",
  "icon": "alarm-plus",
  "config": [
    {
      "name": "Timestamps to report",
      "value": { "type": "string", "default": "" }
    },
    {
      "name": "Report if skipped past",
      "value": { "type": "boolean", "default": false }
    },
    {
      "name": "Allow multiple reports per show",
      "value": { "type": "boolean", "default": false }
    }
  ],
  "state": [
    {
      "name": "Timer State",
      "value": {
        "type": "option",
        "options": ["Paused", "Ticking"],
        "default": "Paused"
      },
      "writableFromClient": true
    }
  ],
  "events": {
    "fromCogs": [],
    "toCogs": [
      {
        "name": "Timestamp reached",
        "value": { "type": "number" }
      }
    ]
  }
}
